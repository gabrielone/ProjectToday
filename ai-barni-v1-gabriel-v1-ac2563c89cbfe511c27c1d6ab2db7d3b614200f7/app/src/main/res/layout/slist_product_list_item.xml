<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/productListItemImage"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        app:srcCompat="@drawable/bruno_logo_blue"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="16dp" />

    <TextView
        android:id="@+id/productListItemProductName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/productListItemImage"
        android:layout_marginStart="10dp"
        android:layout_toEndOf="@+id/productListItemImage"
        android:text="Product Name"
        android:textAlignment="viewStart"
        android:textColor="@color/barniColor"
        android:textSize="16sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/productListItemTextPriceLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/productListItemImage"
        android:layout_alignStart="@+id/productListItemProductName"
        android:text="Price:"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/productListItemProductPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/productListItemTextPriceLabel"
        android:layout_alignBottom="@+id/productListItemTextPriceLabel"
        android:layout_marginStart="11dp"
        android:layout_toEndOf="@+id/productListItemTextPriceLabel"
        android:text="$12.00"
        android:textAlignment="center"
        android:textStyle="bold" />

    <ImageButton
        android:id="@+id/imageButton"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/productListItemProductName"
        android:layout_marginEnd="10dp"
        app:srcCompat="@drawable/add_to_cart_icon"
        android:adjustViewBounds="true"
        android:scaleType="centerCrop"/>

    <TextView
        android:id="@+id/productListItemProductDescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/productListItemTextPriceLabel"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:text="114 characters + - dbhmfbdhsmfhdbfnbbdmbbsdbfmdshfbmsddkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkk"
        android:textAlignment="viewStart" />

</RelativeLayout>