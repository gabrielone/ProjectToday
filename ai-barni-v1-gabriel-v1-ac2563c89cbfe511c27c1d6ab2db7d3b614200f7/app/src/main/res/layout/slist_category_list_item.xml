<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/categoryListItemImage"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        app:srcCompat="@drawable/bruno_logo_blue"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="16dp" />

    <TextView
        android:id="@+id/categoryListItemProductName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/categoryListItemImage"
        android:layout_marginStart="10dp"
        android:layout_toEndOf="@+id/categoryListItemImage"
        android:text="Category Name"
        android:textAlignment="viewStart"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/categoryListItemProductDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/categoryListItemProductName"
        android:layout_below="@+id/categoryListItemProductName"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="2dp"
        android:text="category tags and description to help for search and better management"
        android:textAlignment="viewStart" />

</RelativeLayout>